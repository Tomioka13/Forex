//| Chartist Analyser function                                              |
//+------------------------------------------------------------------+
int getCandleType(double candlePlace)
{
//---Returns 1 if the selected candle is Bullish, -1 if the candle is Bearish, 0 if the candle is neither of them
double op,cl;
int ret;
op=Open[candlePlace];
cl=Close[candlePlace];
if (op<cl)
{ ret = 1 ; }
else if (op==cl)
{ ret = 0 ; }
else
{ ret = -1 ; }
return ret;
}



